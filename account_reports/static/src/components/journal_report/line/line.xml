<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="account_reports.JournalReportLine" t-inherit="account_reports.AccountReportLineCustomizable" owl="1">
        <xpath expr="//tr" position="attributes">
            <attribute name="t-if">!('is_tax_section_line' in props.line)</attribute>
        </xpath>

        <xpath expr="//tr" position="after">
            <t t-else="">
                <tr t-att-class="lineClasses" t-att-style="props.line.style">
                    <td
                        t-att-class="getJournalReportLineClasses()"
                        t-att-style="'padding-top: 3rem; padding-left: 8px;'"
                        t-att-colspan="2"
                    >
                        <t t-if="'tax_report_lines' in props.line">
                            <t t-set="taxesByCountry" t-value="props.line.tax_report_lines"/>
                            <t t-set="hasTaxesSeveralCountries" t-value="Object.keys(taxesByCountry).length > 1"/>

                            <table class="o_account_reports_subtable table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th class="acc_rep_column_header acc_rep_line_name"
                                            t-att-colspan="taxesByCountry.length > 1 ? 3 : 4"
                                        >
                                            Taxes Applied
                                            <t t-if="controller.groups.account_user">
                                                <a
                                                    t-on-click="(ev) => this.openTaxJournalItems(ev, 'Taxes Applied', 'tax')"
                                                >
                                                    => Audit
                                                </a>
                                            </t>
                                        </th>
                                    </tr>
                                    <tr>
                                        <t t-if="hasTaxesSeveralCountries">
                                            <th>Country</th>
                                        </t>
                                        <th>Name</th>
                                        <th class="acc_rep_column_header text-end">Base Amount</th>
                                        <th class="acc_rep_column_header text-end">Tax Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="taxesByCountry" t-as="country" t-key="country_index">
                                        <t t-foreach="props.line.tax_report_lines[country]" t-as="tax" t-key="tax_index">
                                            <tr>
                                                <t t-if="hasTaxesSeveralCountries">
                                                    <t t-if="tax_index == 0">
                                                        <td>
                                                            <span>
                                                                <t t-out="country"/>
                                                            </span>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td/>
                                                    </t>
                                                </t>

                                                <td class="acc_rep_line_name">
                                                    <a
                                                        t-on-click="(ev) => controller.reportAction(ev,
                                                            'journal_report_action_dropdown_audit_default_tax_report', {
                                                                line_id: tax.line_id,
                                                                date_form: props.line.date_from,
                                                                date_to: props.line.date_to,
                                                        })"
                                                    >
                                                        <t t-out="tax.name"/>
                                                    </a>
                                                </td>

                                                <td class="text-end font-monospace">
                                                    <span>
                                                       <t t-out="tax.base_amount"/>
                                                    </span>
                                                </td>

                                                <td class="text-end font-monospace">
                                                    <span>
                                                       <t t-out="tax.tax_amount"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </td>

                    <td t-att-colspan="5" t-att-style="'padding-top: 3rem;'">
                        <t t-set="taxGrids" t-value="props.line.tax_grid_summary_lines"/>

                        <t t-if="'tax_grid_summary_lines' in props.line and Object.keys(taxGrids).length > 0">
                            <t t-set="hasTaxesGridsSeveralCountries" t-value="Object.keys(taxGrids).length > 1"/>

                            <table class="o_account_reports_subtable table table-sm table-striped">
                                <thead>
                                    <tr>
                                        <th class="acc_rep_column_header account_report_line_name" t-att-colspan="(hasTaxesGridsSeveralCountries) ? 5 : 4">
                                            Impacted Tax Grids
                                            <t t-if="controller.groups.account_user">
                                                <a
                                                    t-on-click="(ev) => this.openTaxJournalItems(ev, 'Impacted Tax Grids', 'tag')"
                                                >
                                                    => Audit
                                                </a>
                                            </t>
                                        </th>
                                    </tr>
                                    <tr>
                                        <t t-if="hasTaxesGridsSeveralCountries">
                                            <th class="acc_rep_column_header">Country</th>
                                        </t>
                                        <th>Grid</th>
                                        <th class="acc_rep_column_header text-end">+</th>
                                        <th class="acc_rep_column_header text-end">-</th>
                                        <th class="acc_rep_column_header text-end">Impact On Grid</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="taxGrids" t-as="country" t-key="country_index">
                                        <t t-foreach="taxGrids[country]" t-as="grid" t-key="grid_index">
                                            <tr>
                                                <t t-if="hasSeveralGrids">
                                                    <t t-if="grid_index == 0">
                                                        <td>
                                                            <span>
                                                                <t t-out="country"/>
                                                            </span>
                                                        </td>
                                                    </t>
                                                    <t t-else="">
                                                        <td/>
                                                    </t>
                                                </t>

                                                <td class="acc_rep_line_name">
                                                    <a
                                                        t-on-click="(ev) => controller.reportAction(ev,
                                                            'journal_report_tax_tag_template_open_aml', {
                                                                tag_id: taxGrids[country][grid]['tag_id'],
                                                                date_form: props.line.date_from,
                                                                date_to: props.line.date_to,
                                                        })"
                                                    >
                                                        <t t-out="grid"/>
                                                    </a>
                                                </td>

                                                <td class="text-end font-monospace">
                                                    <span>
                                                        <t t-out="taxGrids[country][grid]['+'] || 0"/>
                                                    </span>
                                                </td>

                                                <td class="text-end font-monospace">
                                                    <span>
                                                        <t t-out="taxGrids[country][grid]['-'] || 0"/>
                                                    </span>
                                                </td>

                                                <td class="text-end font-monospace">
                                                    <span>
                                                        <t t-out="taxGrids[country][grid]['impact']"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </t>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </td>
                </tr>
            </t>
        </xpath>
    </t>
</templates>
