<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="note_note_view_form_hr_payroll" model="ir.ui.view">
        <field name="name">note.note.view.form.hr.payroll</field>
        <field name="model">note.note</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="message_partner_ids" widget="many2many_tags" string="Shared With"/>
                        </group>
                        <group>
                            <button string="Share" type="object" name="action_add_follower" class="btn-secondary"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field string="Name" name="name" widget="char" required="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" groups="base.group_no_one"
                                help="The Payroll Dashboard tag is required for the note to be displayed on the dashboard."/>
                            <field name="color" widget="color_picker" string="Color"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Save" special="save" class="btn-primary"/>
                    <button string="Discard" special="cancel"/>
                    <button string="Delete" type="object" name="unlink"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="note_note_hr_payroll_action" model="ir.actions.act_window">
        <field name="name">Notes</field>
        <field name="res_model">note.note</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="note_note_view_form_hr_payroll"/>
        <field name="target">new</field>
    </record>
</odoo>
