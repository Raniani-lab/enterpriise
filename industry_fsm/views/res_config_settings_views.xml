<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_sale" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.industry.fsm</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='tasks_management']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_industry_fsm_report"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_industry_fsm_report"/>
                            <div class="text-muted">
                                Use Intervention Reports
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
