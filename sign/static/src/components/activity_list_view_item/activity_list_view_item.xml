<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ActivityListViewItem" t-inherit-mode="extension">
        <xpath expr="//a[hasclass('o_ActivityListViewItem_markAsDone')]" position="after">
            <a t-if="activityListViewItem.activity.category === 'sign_request'" class="fa fa-pencil-square-o" title="Request Signature" aria-label="Request Signature" role="img" t-on-click="activityListViewItem.onClickRequestSign"/>
        </xpath>
    </t>
</templates>
