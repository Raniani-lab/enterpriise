<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="social_youtube.YoutubeUploadField" owl="1">
        <t t-if="props.readonly">
            <div class="o_social_youtube_field">
                <span type="text" class="o_social_youtube_upload_filename"
                    t-att-class="{'d-none': !this.props.value}"
                    t-out="this.props.value"/>
            </div>
        </t>
        <t t-else="">
            <div class="o_field_widget o_field_binary_file o_social_youtube_field o_social_youtube_field" aria-atomic="true">
                <input type="text" class="o_input o_social_youtube_upload_filename"
                    t-att-class="{'d-none': !this.props.value}"
                    readonly="readonly"
                    t-att-name="this.props.name"
                    t-att-value="this.props.value"/>
                <div class="o_social_youtube_upload_bar w-100 position-relative"
                    t-att-class="{'d-none': !this.state.uploading}">
                    <div class="position-absolute fw-bold w-100 h-100 text-center">
                        <span class="fa fa-spin fa-spinner me-1"></span>
                        <span class="o_social_youtube_upload_text" t-out="this.state.socialYoutubeText"/>
                    </div>
                    <div class="o_social_youtube_upload_progress h-100"
                        t-attf-style="width: {{this.state.uploadProgress}}%;"/>
                </div>
                <button type="button"
                    class="btn btn-primary o_select_file_button"
                    t-att-class="{'d-none': this.state.uploading || this.props.value}"
                    t-on-click="() => {this.fileInputRef.el.click()}"
                    title="Select">Upload Video</button>
                <button type="button"
                    class="btn btn-secondary fa fa-trash-o o_clear_file_button"
                    t-att-class="{'d-none': !this.props.value}"
                    title="Clear"
                    aria-label="Clear"
                    t-on-click="this._onClearClick"/>

                <div class="o_hidden_input_file" aria-atomic="true" >
                    <form method="post"
                        enctype="multipart/form-data"
                        class="o_form_binary_form o_social_youtube_upload_form">
                        <input type="file" class="o_input_file" name="file" accept="video/*"
                            t-ref="fileInput"
                            t-on-change="this._onFileChanged"/>
                    </form>
                </div>
            </div>
        </t>
    </t>

    <t t-name="social.StreamPostCommentsOriginalPost" t-extend="social.StreamPostCommentsOriginalPost">
        <t t-jquery="span.o_social_original_post_author_image" t-operation="append">
            <img t-if="originalPost.mediaType == 'youtube'"
                t-attf-src="/web/image/social.account/#{originalPost.youtubeAccountId}/image/48x48" alt="Author Image"/>
        </t>
        <t t-jquery="div[name='o_social_original_post_message_body']" t-operation="before">
            <div class="pt-2 pb-3" t-if="originalPost.mediaType === 'youtube'">
                <div class="fw-bold pb-3" t-esc="originalPost.linkTitle"/>
                <div class="w-100 ratio ratio-16x9 bg-200">
                    <iframe
                        t-attf-src="https://www.youtube.com/embed/#{originalPost.youtubeVideoId}?origin=#{window.document.location.host}&amp;rel=0"
                        frameborder="0" allowfullscreen="1"></iframe>
                </div>
            </div>
        </t>
        <t t-jquery="div.o_social_comments_modal_original_post_content" t-operation="append">
            <div class="o_social_original_post_youtube_stats d-flex pt-2"
                t-if="originalPost.mediaType === 'youtube'">
                <div class="o_social_subtle_btn_disabled ps-2">
                    <i class="fa fa-thumbs-up" title="Likes"/>
                    <b>
                        <t t-esc="originalPost.youtubeLikesRatio"/>
                        %
                    </b>
                </div>
                <div class="o_social_subtle_btn_disabled ps-3 fw-bold">
                    Views
                    <t t-esc="originalPost.youtubeViewsCount"/>
                </div>
            </div>
        </t>
    </t>
</templates>
